<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.game.climbing.ClimbingGameFragment">

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="277dp"
        android:background="@drawable/gradient_home"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="132dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="132dp"
            android:text="Game leo núi"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_diagram"
            android:layout_width="409dp"
            android:layout_height="350dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cua_than_ky">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="88dp"
            android:text="Đỉnh núi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/cua_than_ky"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="-15dp"
            android:src="@drawable/cuathanky"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/dice_image"
            android:layout_width="126dp"
            android:layout_height="116dp"
            android:layout_marginStart="142dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="143dp"
            android:background="@drawable/dice_sprite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout_diagram" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="341dp"
            android:layout_height="168dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="Tính năng này chỉ để test cảm biến rung. chưa hoàn thiện phần chơi game khi random ra xúc sắc thì doremon di chuyển. Hy vọng các bạn sinh viên sau này maintain lại app sẽ hoàn thiện tính năng di chuyển của doraemon giúp mình =))"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/cua_than_ky"
            app:layout_constraintTop_toBottomOf="@+id/title" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>